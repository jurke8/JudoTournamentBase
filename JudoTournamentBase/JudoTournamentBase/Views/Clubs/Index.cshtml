@model IEnumerable<JudoTournamentBase.Models.Club>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Localization.Clubs</h2>

<p>
    @Html.ActionLink(Resources.Localization.Create + " " + Resources.Localization.Club, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink(Resources.Localization.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.Localization.Details, "Details", new { id = item.Id }) |
                @Html.ActionLink(Resources.Localization.Delete, "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
